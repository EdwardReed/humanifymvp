<div id="inboxList" class="panel col-sm-7">
  <div class="recipients">
    <% @mailbox.conversations.each do |conversation| %>
      <div class="media<%= " active" if conversation.id == params[:id].to_i %>">
        <div class="media-left">
          <%= link_to "/users/#{participants(conversation,
                                @mailbox.messageable)
                                .first.url_params}" do %>
            <img class="media-object img-circle" data-src="holder.js/64x64" alt="64x64" src="data:image/svg+xml;base64," data-holder-rendered="true" style="width: 64px; height: 64px;">
          <% end %>
        </div>
        <div class="media-body">
          <%= link_to inbox_path conversation.id do %>
            <h4 class="media-heading"><%= conversation.subject %></h4>
            <p>
              <%= truncate conversation.messages.first.body,
                length: 75 %>
            </p>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
