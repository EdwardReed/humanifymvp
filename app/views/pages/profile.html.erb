<div class="container-fluid">
  Name Bio | Social Captial | Trusted by | Add To My Circle + Write Message
</div>
<h1>Karma Points: <%= @user.points%></h1>
<hr>

<div id="listings" class="transitions-enabled">
  <% @user.listings.each do |listing| %>
    <div class="box panel panel-default">
      <%= link_to image_tag(listing.image.url(:medium)), listing %>
      <div class="panel-body">
        <span><%= listing.points %>kp</span>
        <p><%= listing.description %></p>
        <strong><%= listing.user.name if listing.user %></strong>
        <div class="actions">
          <%= link_to edit_listing_path(listing) do %>
            <span class="glyphicon glyphicon-edit"></span>
            Edit
          <% end %>
          <%= link_to listing, method: :delete,
            data: { confirm: 'Are you sure?' } do %>
            <span class="glyphicon glyphicon-trash"></span>
            Delete
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
