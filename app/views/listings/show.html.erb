<%= link_to root_path do %>
  <span class="glyphicon glyphicon-arrow-left"></span>
  Back
<% end %>

<div class="row">
  <div class="col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading center-block">
        <%= image_tag @listing.image.url(:medium) %>
        <h1> 
          Asking for: <br>
          <%= @listing.points %> KP
        </h1>
        <% if @listing.offers.present?  %>
          <h1> 
            Highest Current Bid: <br>
            <%= @listing.highest_offer.points %> KP
          </h1>
        <% end %>
      </div>
      <div class="panel-body">
        <p><%= @listing.description %></p>
        <p>
          <strong>
            <%= @listing.user.name if @listing.user %>
          </strong>
        </p>
        <p>

        <% if @listing.offers.present?  %>
          <%= form_for @listing.offers.build, url: offer_path(@listing.id), html: { multipart: true } do |f| %>
            Set Your Offer
            <div class="form-group">
                <%= f.number_field :points,
                  value: @listing.highest_offer.points,
                  min: @listing.highest_offer.points,
                  step: 50, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.submit "Offer", class: "btn btn-danger" %>
            </div>
          <% end %>
        <% else %>
          <%= form_for @listing.offers.build, url: offer_path(@listing.id), html: { multipart: true } do |f| %>
            Set Your Offer
            <div class="form-group">
                <%= f.number_field :points, value: @listing.points,
                  min: @listing.points, step: 50, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.submit "Offer", class: "btn btn-danger" %>
            </div>
          <% end %>
        <% end %>
        </p>
        <% if @listing.user == current_user %>
          <%= link_to edit_listing_path(@listing) do %>
            <span class="glyphicon glyphicon-edit"></span>
            Edit
          <% end %>
          <%= link_to @listing, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span class="glyphicon glyphicon-trash"></span>
            Delete
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
