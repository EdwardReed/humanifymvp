<%= link_to root_path do %>
  <span class="glyphicon glyphicon-arrow-left"></span>
  Back
<% end %>

<div class="row">
  <div class="col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading center-block">
        <%= image_tag @listing.image.url(:medium) %>
        <h3> 
          Asking for: <br>
          <%= @listing.points %> KP
        </h3>
        <% if @listing.valid_offers.present?  %>
          <h3> 
            Highest Current Bid: <br>
            <%= @listing.highest_offer.points %> KP
          </h3>
        <% end %>
      </div>
      <div class="panel-body">
        <p><%= @listing.description %></p>
        <p>
          <strong>
            <%= @listing.user.name if @listing.user %>
          </strong>
        </p>
        <% unless @listing.posted_by?(current_user) %>
          <p>
            <%= render "listings/user/offer" %>
          </p>
        <% end %>
        <% if @listing.user == current_user %>
          <%= link_to edit_listing_path(@listing) do %>
            <span class="glyphicon glyphicon-edit"></span>
            Edit
          <% end %>
          <%= link_to @listing, method: :delete,
            data: { confirm: 'Are you sure?' } do %>
            <span class="glyphicon glyphicon-trash"></span>
            Delete
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<% if @listing.posted_by?(current_user) and @listing.valid_offers.any? %>
  <div class="row">
    <div class="col-md-offset-2 col-md-8">
      <%= render "listings/user/offer_list" %>
    </div>
  </div>
<% end %>
