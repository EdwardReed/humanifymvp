<div class="row">
  <%= link_to root_path do %>
    <div id="back" class="panel col-sm-1">
      <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    </div>
  <% end %>
  <div id="listing-content" class="col-sm-11 panel panel-default">
    <%= render "listings/layouts/listing_info" %>
    <div id="listing-action" class="col-xs-3">
      <% if @listing.valid_offers.present?  %>
        <div id="disable">
          <p id="title">
            <%= @listing.user.name %> is asking for
          </p>
          <h2 id="points">
            <%= @listing.points %> <i>KP</i>
          </h2>
        </div>
        </br>
        <p id="title">
          Highest Bid <br>
          <h2 id="points">
            <%= @listing.highest_offer.points %> <i>KP</i>
          </h2>
        </p>
      <% else %>
        <p id="title">
          <%= @listing.user.name %> is asking for
        </h2>
        <h2 id="points">
          <%= @listing.points %> <i>KP</i>
        </h2>
      <% end %>
      <br>
      <% unless @listing.posted_by?(current_user) %>
        <p>
          <%= render "listings/user/offer" %>
        </p>
      <% end %>
      <% if @listing.user == current_user %>
        <%= link_to edit_listing_path(@listing) do %>
          <span class="glyphicon glyphicon-edit"></span>
          Edit
        <% end %>
        <%= link_to @listing, method: :delete,
          data: { confirm: 'Are you sure?' } do %>
          <span class="glyphicon glyphicon-trash"></span>
          Delete
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<div>
  <% if @listing.posted_by?(current_user) %>
    <div class="row">
      <% unless @listing.accepted? %>
        <% if @listing.valid_offers.any? %>
          <div class="col-md-offset-4 col-md-4">
            <%= render "listings/user/offer_list" %>
          </div>
        <% elsif @listing.valid_offers.empty? %>
          <div class="col-md-offset-2 col-md-8">
            <div class="panel panel-default">
              <!-- Default panel contents -->
              <div class="panel-body text-center">
                <h3>
                  Share your post for more offers.
                </h3>
                <br>
                <br>
                <div class="row"> 
                  <div class="col-md-offset-2 col-md-8">
                    Facebook - Twitter [Link Box]
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="col-md-offset-2 col-md-8">
          <div class="panel panel-default">
            <!-- Default panel contents -->
            <div class="panel-body text-center">
              <h3>  </h3>
              <br>
              <br>
              <div class="row"> 
                <div class="col-md-offset-2 col-md-8">
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
