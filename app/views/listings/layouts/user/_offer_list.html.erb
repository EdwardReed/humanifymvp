<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">
    <b>
      <%= @listing.valid_offers.count %> Current
      <%= 'Offer'.pluralize(@listing.valid_offers.count) %>
    </b>
  </div>
  <div class="panel-body text-center">
    <div class="col-md-4">
      <h2> 
        <%= @listing.highest_offer.user.name %> offers:
        <%= @listing.highest_offer.points %> KP
      </h2>
      <div class="">
        <%= form_for @listing.highest_offer,
          url: offer_path(@listing.highest_offer.id),
          html: { multipart: true } do |g| %>
          <%= g.submit "Accept", name: "status",
            class: "btn btn-default btn-lg" %>
          </br>
          </br>
          <%= g.submit "Decline", name: "status",
            class: "btn btn-default btn-lg" %>
        <% end %>
      </div>
      </br>
      </br>
    </div>
    <div id="offerList" class="panel col-sm-8">
      <div class="recipients">
        <% @listing.valid_offers.each do |o| %>
          <div class="media">
            <div class="media-left">
              <a href="#">
                <img class="media-object img-circle" data-src="holder.js/64x64" alt="64x64" src="data:image/svg+xml;base64," data-holder-rendered="true" style="width: 64px; height: 64px;">
              </a>
            </div>
            <div class="media-body">
              <h4 class="media-heading"><%= o.user.name %></h4>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
