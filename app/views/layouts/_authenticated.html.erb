<li id="pointsU">
  <%= link_to profile_path do %>
    KP: <%= current_user.points %>
  <% end %>
</li>
<li id="notificationsMenu">
  <div id="userImg">
    <%= image_tag(current_user.user_img, class:"img-circle",
                  id: "user-avatar") %>
  </div>
  <div id="notificationsMenuComp"> 
    <%= react_component('NotificationsMenu', prerender: true) %>
  </div>
</li>
<li id="inboxMenu">
  <%= link_to :inbox_index do %>
    <span class="glyphicon inbox glyphicon-inbox" aria-hidden="true"></span>
    <div id="inboxMenuComp">
      <%= react_component('InboxNotifications', prerender: true) %>
    </div>
  <% end %>
</li>
<li class="dropdown">
  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><%= current_user.name %><span class="caret"></span></a>
  <ul class="dropdown-menu" role="menu">
      <li><%= link_to 'New Listing', new_listing_path %></li>
    <li class="divider"></li>
      <li><%= link_to "Settings", edit_user_registration_path %></li>
      <li>
        <%= link_to "Log out", destroy_user_session_path, method: :delete %>
      </li>
  </ul>
</li>
